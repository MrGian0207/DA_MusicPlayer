<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/linear_gradient_background">
    <LinearLayout
        android:id="@+id/backFromPlayerActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp">
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_arrow_back_ios_new_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="25sp"/>
    </LinearLayout>


<!--        <ImageView-->
<!--            android:id="@+id/image_player"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="396dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_marginLeft="13dp"-->
<!--            android:layout_marginRight="13dp"-->
<!--            android:src="@drawable/music_image"/>-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_player"
        android:layout_width="wrap_content"
        android:layout_height="396dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:src="@drawable/music_image">
    </de.hdodenhof.circleimageview.CircleImageView>

    <SeekBar
        android:id="@+id/playerSeekbar"
        android:layout_width="371dp"
        android:layout_height="20dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="13dp"
        android:backgroundTint="#ffffff"
        android:progress="0"
        android:progressTint="#ffffff"
        android:thumbTint="#ffffff" />

    <RelativeLayout
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp">

        <TextView
            android:id="@+id/textCurrentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#ffffff" />
        <TextView
            android:id="@+id/textTotalDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="00:00"
            android:textColor="#ffffff"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp">
        <ImageButton
            android:id="@+id/btn_loopingSong"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:background="@drawable/baseline_repeat_24"/>

        <ImageButton
            android:id="@+id/btn_precious"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:background="@drawable/baseline_skip_previous_24" />
        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/baseline_play_circle_filled_24" />

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="60dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:background="@drawable/baseline_skip_next_24" />

        <ImageButton
            android:id="@+id/btn_playlist"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:background="@drawable/baseline_playlist_play_24" />
    </LinearLayout>


</LinearLayout>